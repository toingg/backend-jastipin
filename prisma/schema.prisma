generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  client
  traveler
}

model Users {
  userId    String    @id @unique
  name      String
  email     String    @unique
  password  String
  role      Role      @default(client)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Flights   Flights[]
}

model Flights {
  flightId         String   @id @unique
  traveler         Users    @relation(fields: [travelerId], references: [userId])
  travelerId       String
  flightNumber     String
  departureCountry String
  arrivalCountry   String
  createdAt        DateTime
  updatedAt        DateTime @updatedAt
}
